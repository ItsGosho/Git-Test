<div class="container">
    <h1 class="my-4">Course title : {{course.title}}
    </h1>

    <div class="row">
        <div class="col-md-8">
            <img class="img-fluid" src="{{course.imageURL}}"
                 alt="{{course.title}}"/>
        </div>
        <div class="col-md-4 text-center">
            <h3 class="my-3">Course Description</h3>
            <p>{{course.description}}</p>
            <span class="badge badge-pill badge-success">enrolled</span>
        </div>
    </div>

    <h3 class="text-center">Lectures List</h3>

    <ul class="list-group">

        {{#each lectures}}
            <li class="list-group-item">
                <h5 class="mb-1">{{title}}</h5>
                <span class="float-right">
                            <a href="/lecture/{{id}}/play"><button class="btn btn-secondary">Play</button></a>
                        </span>
            </li>
        {{else}}
            <h1>No lectures!</h1>
        {{/each}}

    </ul>
</div>
