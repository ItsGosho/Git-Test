{{#each codes}}
    <div class="card col-md-4">
        <img class="card-img-center" src="images/cat{{status}}.jpg" width="250" height="250" alt="Card image cap">
        <div class="card-block">
            <button class="btn btn-primary">Show status code</button>
            <div style="display: none" id={{status}}>
                <h4 class="card-title">Status Code: {{status}}</h4>
                <p class="card-text">{{message}}</p>
            </div>
        </div>
    </div>
{{/each}}